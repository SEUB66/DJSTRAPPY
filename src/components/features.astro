---
// @ts-ignore
import { Icon } from "astro-icon/components";
import { useTranslations } from "@/i18n/translations";

interface Props {
  lang?: "en" | "fr";
}

const { lang = "en" } = Astro.props;
const t = useTranslations(lang);

const features = [
  {
    title: t("features.production.title"),
    description: t("features.production.description"),
    icon: "bx:bxs-briefcase",
  },
  {
    title: t("features.liveDJ.title"),
    description: t("features.liveDJ.description"),
    icon: "bx:bxs-window-alt",
  },
  {
    title: t("features.original.title"),
    description: t("features.original.description"),
    icon: "bx:bxs-data",
  },
  {
    title: t("features.collaboration.title"),
    description: t("features.collaboration.description"),
    icon: "bx:bxs-bot",
  },
  {
    title: t("features.distribution.title"),
    description: t("features.distribution.description"),
    icon: "bx:bxs-file-find",
  },
  {
    title: t("features.community.title"),
    description: t("features.community.description"),
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight bg-gradient-to-r from-purple-500 to-cyan-500 bg-clip-text text-transparent">
    {t("features.title")}
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    {t("features.description")}
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((feature) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-gradient-to-br from-purple-500 to-cyan-500 rounded-full p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={feature.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg text-teal-600">{feature.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{feature.description}</p>
        </div>
      </div>
    ))
  }
</div>
