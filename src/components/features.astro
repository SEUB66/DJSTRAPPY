---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Electronic Music Production",
    description:
      "Crafting unique electronic soundscapes with cutting-edge production techniques and creative experimentation.",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Live DJ Sets",
    description:
      "High-energy live performances that blend various genres and create unforgettable experiences on the dancefloor.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Original Compositions",
    description:
      "Creating original tracks like 'Atypique' that push boundaries and explore new sonic territories.",
    icon: "bx:bxs-data",
  },
  {
    title: "Collaboration",
    description:
      "Working with talented artists and producers to create unique collaborative projects and remixes.",
    icon: "bx:bxs-bot",
  },
  {
    title: "Music Distribution",
    description:
      "Making our music accessible across all major platforms so you can enjoy our sounds anywhere, anytime.",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Community",
    description:
      "Building a passionate community of music lovers who share our vision for innovative electronic music.",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight bg-gradient-to-r from-purple-500 to-cyan-500 bg-clip-text text-transparent">
    The applepunk Experience
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Discover what makes our music unique. From production to performance, we bring passion and innovation to everything we do.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-gradient-to-br from-purple-500 to-cyan-500 rounded-full p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg text-teal-600">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
