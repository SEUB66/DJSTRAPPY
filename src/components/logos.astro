---
// @ts-ignore
import { Icon } from "astro-icon/components";
---

<div class="mt-24">
  <h2 class="text-center bg-gradient-to-r from-purple-500 to-cyan-500 bg-clip-text text-transparent font-medium">Listen on your favorite platforms</h2>
  <div class="flex gap-8 md:gap-20 items-center justify-center mt-10 flex-wrap">

    <a href="https://spotify.com/artist/djstrappy" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform" aria-label="Listen on Spotify">
      <Icon class="size-8 md:size-12 text-pink-500 hover:text-pink-400" name="simple-icons:spotify" />
    </a>
    <a href="https://soundcloud.com/djstrappy" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform" aria-label="Listen on SoundCloud">
      <Icon class="size-8 md:size-12 text-teal-500 hover:text-teal-400" name="simple-icons:soundcloud" />
    </a>
    <a href="https://music.apple.com/djstrappy" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform" aria-label="Listen on Apple Music">
      <Icon class="size-8 md:size-12 text-purple-500 hover:text-purple-400" name="simple-icons:applemusic" />
    </a>
    <a href="https://youtube.com/@djstrappy" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform" aria-label="Watch on YouTube">
      <Icon class="size-8 md:size-16 text-cyan-500 hover:text-cyan-400" name="simple-icons:youtube" />
    </a>
    <a href="https://deezer.com/artist/djstrappy" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform" aria-label="Listen on Deezer">
      <Icon class="size-8 md:size-16 text-yellow-500 hover:text-yellow-400" name="simple-icons:deezer" />
    </a>
    <a href="https://bandcamp.com/djstrappy" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform" aria-label="Listen on Bandcamp">
      <Icon class="size-8 md:size-12 text-gray-600 hover:text-gray-500" name="simple-icons:bandcamp" />
    </a>

  </div>
  
  <h3 class="text-center text-slate-500 font-medium mt-12 mb-4">Follow us on social media</h3>
  <div class="flex gap-8 items-center justify-center">
    <a href="https://twitter.com/djstrappy" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform" aria-label="Follow on X (Twitter)">
      <Icon class="size-8 md:size-10 text-gray-800 hover:text-cyan-500 transition-colors" name="simple-icons:x" />
    </a>
    <a href="https://instagram.com/djstrappy" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform" aria-label="Follow on Instagram">
      <Icon class="size-8 md:size-10 text-pink-500 hover:text-pink-400 transition-colors" name="simple-icons:instagram" />
    </a>
    <a href="https://facebook.com/djstrappy" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform" aria-label="Follow on Facebook">
      <Icon class="size-8 md:size-10 text-blue-600 hover:text-blue-500 transition-colors" name="simple-icons:facebook" />
    </a>
  </div>
</div>
