---
import { sizeClasses, styleVariantClasses, baseClasses, type Size, type Style } from "./styles";

interface Props {
  href: string;
  size?: Size;
  block?: boolean;
  style?: Style;
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;
---

<a
  href={href}
  {...rest}
  class:list={[
    baseClasses,
    block && "w-full",
    sizeClasses[size],
    styleVariantClasses[style],
    className,
  ]}
  ><slot />
</a>
