---
import { sizeClasses, styleVariantClasses, baseClasses, type Size, type Style } from "./styles";

interface Props {
  size?: Size;
  block?: boolean;
  style?: Style;
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;
---

<button
  {...rest}
  class:list={[
    baseClasses,
    block && "w-full",
    sizeClasses[size],
    styleVariantClasses[style],
    className,
  ]}
  ><slot />
</button>
