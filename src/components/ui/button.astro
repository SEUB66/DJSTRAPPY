---
import {
  type Size,
  type ButtonStyle,
  sizeClasses,
  baseClasses,
  buttonStyleClasses,
} from "./buttonStyles";

interface Props {
  size?: Size;
  block?: boolean;
  style?: ButtonStyle;
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;
---

<button
  {...rest}
  class:list={[
    baseClasses,
    block && "w-full",
    sizeClasses[size],
    buttonStyleClasses[style],
    className,
  ]}
  ><slot />
</button>
