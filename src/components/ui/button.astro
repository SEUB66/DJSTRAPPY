---
import { buttonSizeClasses, buttonStyleVariantClasses, baseClasses, type Size, type ButtonStyle } from "./styles";

interface Props {
  size?: Size;
  block?: boolean;
  style?: ButtonStyle;
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;
---

<button
  {...rest}
  class:list={[
    baseClasses,
    block && "w-full",
    buttonSizeClasses[size],
    buttonStyleVariantClasses[style],
    className,
  ]}
  ><slot />
</button>
