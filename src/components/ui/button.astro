---
import {
  buttonSizes,
  buttonStyles,
  baseClasses,
  type Size,
  type ButtonStyle,
} from "./shared-styles";

interface Props {
  size?: Size;
  block?: boolean;
  style?: ButtonStyle;
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;
---

<button
  {...rest}
  class:list={[
    baseClasses,
    block && "w-full",
    buttonSizes[size],
    buttonStyles[style],
    className,
  ]}
  ><slot />
</button>
