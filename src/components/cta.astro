---
import Link from "./ui/link.astro";
import { useTranslations } from "@/i18n/translations";

interface Props {
  lang?: "en" | "fr";
}

const { lang = "en" } = Astro.props;
const t = useTranslations(lang);
---

<div
  class="bg-gradient-to-r from-purple-600 via-teal-500 to-cyan-500 p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-6xl tracking-tight">
    {t("cta.title")}
  </h2>
  <p class="text-white/80 mt-4 text-lg md:text-xl">
    {t("cta.description")}
  </p>
  <div class="flex mt-5">
    <Link href="#" style="inverted" class="bg-yellow-400 text-gray-900 hover:bg-yellow-300 border-0">{t("cta.button")}</Link>
  </div>
</div>
