---
import { Picture } from "astro:assets";
import heroImage from "@/assets/hero.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter bg-gradient-to-r from-purple-500 via-teal-400 to-cyan-500 bg-clip-text text-transparent">
      DJStrappy - Music by seub&amp;will
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Experience the unique sounds of DJStrappy. Listen to our latest track 'Atypique' 
      and discover electronic music that pushes boundaries and creates unforgettable moments.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        class="flex gap-1 items-center justify-center bg-gradient-to-r from-purple-500 to-cyan-500 hover:from-purple-600 hover:to-cyan-600 border-0"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />
        Listen Now
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="#"
        class="flex gap-1 items-center justify-center border-teal-500 text-teal-600 hover:bg-teal-50"
        >
        <Icon class="text-teal-600 w-4 h-4" name="bx:bxl-github" />
        Explore More
      </Link>
    </div>
  </div>
</main>
