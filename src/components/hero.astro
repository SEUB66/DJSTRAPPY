---
import { Picture } from "astro:assets";
import heroImage from "@/assets/images/hero-main.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="APPLEPPUNK Digital Services"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter bg-gradient-to-r from-purple-500 via-teal-400 to-cyan-500 bg-clip-text text-transparent">
      APPLEPPUNK
    </h1>
    <p class="text-xl mt-2 text-slate-700 dark:text-slate-300 font-semibold">
      Digital Solutions That Make an Impact
    </p>
    <p class="text-lg mt-4 text-slate-600 dark:text-slate-400 max-w-xl">
      We specialize in <strong>Web Design</strong>, <strong>App Development</strong>, 
      <strong>Company Branding</strong>, <strong>Social Network Boosting</strong>, 
      and <strong>Videoclip Ads Creation</strong>. Transform your digital presence with us.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#services"
        class="flex gap-1 items-center justify-center bg-gradient-to-r from-purple-500 to-cyan-500 hover:from-purple-600 hover:to-cyan-600 border-0"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bx-rocket" />
        Our Services
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/contact"
        class="flex gap-1 items-center justify-center border-teal-500 text-teal-600 dark:text-teal-400 hover:bg-teal-50 dark:hover:bg-teal-900/20"
        >
        <Icon class="text-teal-600 dark:text-teal-400 w-4 h-4" name="bx:bx-envelope" />
        Get a Quote
      </Link>
    </div>
  </div>
</main>
