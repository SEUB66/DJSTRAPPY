---
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { getLangFromUrl, useTranslations, languages } from "@/i18n/translations";

interface Props {
  lang?: "en" | "fr";
}

const { lang: propLang } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const basePath = lang === "fr" ? "/fr" : "";

const navigationMenuItems = [
  {
    title: t("nav.profile"),
    path: `${basePath}/profile`,
  },
  {
    title: t("nav.contact"),
    path: `${basePath}/contact`,
  },
];

// Get the current path without language prefix for language switching
const currentPath = Astro.url.pathname.replace(/^\/(fr|en)/, "") || "/";
const otherLang = lang === "fr" ? "en" : "fr";
const otherLangPath = otherLang === "en" ? currentPath : `/fr${currentPath}`;
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href={basePath || "/"} class="text-lg"
          ><span class="font-bold text-slate-800">DJ</span><span
            class="text-slate-500">Strappy</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            navigationMenuItems.map((menuItem, menuItemIndex) => (
              <>
                {menuItem.children && (
                  <Dropdown
                    title={menuItem.title}
                    children={menuItem.children}
                    lastItem={menuItemIndex === navigationMenuItems.length - 1}
                  />
                )}

                {!menuItem.children && (
                  <li>
                    <a
                      href={menuItem.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {menuItem.title}</span>
                      {menuItem.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="#" style="muted" block size="md">{t("nav.login")}</Link>
          <Link href={`${basePath}/signup`} size="md" block>{t("nav.signup")}</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <!-- Language Switcher -->
        <a 
          href={otherLangPath}
          class="flex items-center gap-1 px-3 py-1 text-sm text-gray-600 hover:text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
          title={t("lang.switch")}>
          <span class="text-xs">üåê</span>
          <span>{languages[otherLang]}</span>
        </a>
        <a href="#">{t("nav.login")}</a>
        <Link href={`${basePath}/signup`} size="md">{t("nav.signup")}</Link>
      </div>
    </div>
  </header>
</Container>
